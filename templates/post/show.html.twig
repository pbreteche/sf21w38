{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <nav>
        <a href="{{ path('app_post_index') }}">{{ 'back2list'|trans }}</a>
    </nav>
    <h1>{{ post.title }}</h1>
    <p>{{ 'post.show.authoring'|trans({
            'date': post.createdAt,
            'name': post.writtenBy.nickName
        }) }} {{ post.createdAt|format_date }} {{ 1234.56|format_currency('EUR') }}</p>
    <div>
        {{ post.body }}
    </div>
{% endblock %}
